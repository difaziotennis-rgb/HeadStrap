# ─── Clover Backend — Production Environment ────────
# Copy this file to .env and fill in ALL values before deploying.

# Database (use PostgreSQL in production)
# Example: postgresql://user:password@host:5432/clover?sslmode=require
DATABASE_URL=""

# Auth — MUST be unique random strings. Generate with:
#   node -e "console.log(require('crypto').randomBytes(48).toString('base64url'))"
JWT_SECRET=""
ADMIN_API_KEY=""

# Server
PORT=4000
NODE_ENV=production

# CORS — comma-separated list of allowed frontend origins
ALLOWED_ORIGINS="https://clover.app,https://admin.cloverdata.io"

# Stripe Connect
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# App URL (for Stripe return URLs)
APP_URL="https://clover.app"

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=""
AZURE_CONTAINER_NAME="clover-recordings"
AZURE_SAS_TOKEN=""
